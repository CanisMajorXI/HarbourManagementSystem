<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.redsun.dao.ShipperContainerMapper">
    <select id="getShipperContainers" resultType="shippercontainer" parameterType="shippercontainer">
        SELECT user_id AS userId,
        container_id AS containerId,
        type,
        size
        FROM shipper_container_table
        <trim prefix="WHERE" prefixOverrides="AND">
            <if test="userId != null">
                AND user_id = #{userId}
            </if>
            <if test="containerId != null">
                AND container_id = #{containerId}
            </if>
            <if test="type != null">
                AND type = #{type}
            </if>
            <if test="size != null">
                AND size = #{size}
            </if>
        </trim>
    </select>
    <insert id="insertShipperContainer" parameterType="shippercontainer">
        INSERT into shipper_container_table VALUES (#{userId},#{containerId},#{type},#{size})
    </insert>
    <delete id="deleteShipperContainerById" parameterType="int">
        DELETE FROM shipper_container_table WHERE container_id = #{shipperContainerId}
    </delete>
</mapper>